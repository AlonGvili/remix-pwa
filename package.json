{
  "name": "remix-pwa",
  "version": "0.2.0",
  "description": "A PWA handler for Remix",
  "keywords": [
    "pwa",
    "remix",
    "remix-run",
    "remix-pwa",
    "PWA",
    "PWA-Remix"
  ],
  "license": "MIT",
  "author": {
    "name": "Abdur-Rahman Fashola"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ShafSpecs/remix-pwa"
  },
  "bin": {
    "remix-pwa": "cli.ts"
  },
  "scripts": {
    "build": "rollup -c",
    "lint": "eslint --fix 'src/**/*.ts'",
    "test": "jest",
    "format": "prettier --write \"**/*.ts\" \"**/*.js\" \"**/*.tsx\" \"**/*.jsx\"",
    "start": "node --loader ts-node/esm .\\cli.ts",
    "prepare": "browserify exports.js > bundle.js",
    "install": "npm install -D @types/fs-extra @types/inquirer && npm run start"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/test/**/*.test.ts"
    ]
  },
  "devDependencies": {
    "@remix-run/react": "^1.1.3",
    "@remix-run/serve": "^1.1.3",
    "@types/fs-extra": "^9.0.13",
    "@types/inquirer": "^8.2.0",
    "@types/react": "^17.0.24",
    "@types/react-dom": "^17.0.9",
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "eslint": "^8.9.0",
    "eslint-plugin-react": "^7.28.0",
    "install": "^0.13.0",
    "prettier": "^2.5.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "remix": "^1.1.3",
    "rollup": "^2.3.3",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "terser": "^4.6.10",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "tslint-ionic-rules": "0.0.21",
    "tsup": "^5.11.13",
    "typescript": "^3.8.3"
  },
  "dependencies": {
    "@remix-run/dev": "^1.1.3",
    "browserify": "^17.0.0",
    "colorette": "^2.0.16",
    "cross-env": "^7.0.3",
    "dotenv-cli": "^4.1.1",
    "fs-extra": "^10.0.0",
    "inquirer": "^8.2.0",
    "jest": "^27.5.1",
    "npm-run-all": "^4.1.5",
    "save-dev": "0.0.1-security",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.5.0"
  }
}
