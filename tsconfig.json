{
  "exclude": ["__tests__", "templates"],
  "include": ["**/*.ts", "**/*.tsx", "**/*.js", "**/*.jsx", "templates"],
  "compilerOptions": {
    "lib": ["ES2019"],
    "target": "ES2019",
    "module": "ESNext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "strict": true,

    "declaration": true,
    "emitDeclarationOnly": true,
    "resolveJsonModule": true,

    "outDir": "/dist",
    "rootDir": "."
  }
}